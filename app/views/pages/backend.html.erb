<br> <br>

<h1> Users </h1>
<p> Count: <%= @user_count %> </p> <br>
<% @users.each do |user| %>
	<p>
      <%= link_to "https://www.google.com/search?q=#{user.first_name}+#{user.last_name}", target: "_blank" do %> 
      	<%= user.first_name %> <%= user.last_name %> - <%= user.description %>
	  <% end %> 
	</p>
<% end %> <br> <br>


<h1> Reminders: </h1>
<% @reminders.each do |reminder| %>
	<% if reminder.user %>
	<p>
		Remind - <%= reminder.user.name %> -
		to be in touch with - <%= reminder.content %> -
		on - <%= reminder.date %>
	</p>
	<% end %>
<% end %> <br> <br>


<h1> Users + Contacts: </h1>
<% @users.each do |user| %>
	<p>
      	<%= user.first_name %> <%= user.last_name %> <br>
		<% user.contacts.each do |contact| %>
			<%= contact.name %>,
		<% end %>
	</p> <br>
<% end %> <br> <br>
