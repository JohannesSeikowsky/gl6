
<div data-collapse="medium" data-animation="default" data-duration="400" class="navbar w-nav">
  <a href="/" class="brand w-nav-brand">
    <div class="logo-design" style="font-size: 17px;"> MYN - <%= current_user.name %> </div>
  </a>
  <nav role="navigation" class="nav-menu w-nav-menu">
    <%= link_to 'Go Back', user_account_path(current_user), id: "watch_explainer_btn" %>
    <%= link_to 'Log Out', logout_path, method: :delete, id: "logout_btn" %>
	</nav>
  <div class="w-nav-button">
    <div class="w-icon-nav-menu"></div>
  </div>
</div>

<div style="text-align:center">
  <h3> Reminder to be in touch with <%= @content %> </h3>
  <%= form_for :reminder, url: create_reminder_url do |f| %>
    <%= f.hidden_field :content, value: @content %>
    <%= f.datetime_select :date, :ampm => true, :order => [:day, :month, :year, :hour, :minute], :minute_step => 15 %>
    <br> <br>
    <%= f.submit "set reminder", class: "submit-button-2 w-button" %>

    <br> <br>
    <%= link_to 'Go Back', user_account_path(current_user), style: "text-decoration: underline;" %>

  	<% if notice %>
  		<div class="notice-reminder"><%= notice %></div>
  	<% end %>
  <% end %> <br>
</div>
