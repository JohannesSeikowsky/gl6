<div class="add_contacts_container">
  <p style="text-align: center; font-size: 24px; line-height: 1.38; margin-bottom; 40px; margin-top: 43px;"> 
    Add your Important <br> Contacts below
  </p>

    <%= form_for :contact, url: create_many_contacts_url do |f| %>
      <%= f.text_area :names, placeholder: "Elon Musk, Boris Johnson, Ayn Rand, Noam Chomsky ... etc.", id: "add_contacts_field" %> <br>
      <%= f.submit "Add", class: "add-button w-button" %>
    <% end %>

    <% if notice %>
      <br> <br>
      <p style="text-align: center; font-size: 20px; line-height: 1.28;"> 
         <%= notice %>
      </p>
   <% end %>
</div>


<div id="settings_updated" class="notice">
  changes saved succesfully.
</div>

<div class="table_container">
  <div>
    <div style="display: inline-block; width: 240px; max-width: 240px; font-weight: bold; text-decoration: underline; padding-left: 60px;">
      Name
    </div>

    <!--
    <div style="display: inline-block; width: 162px; max-width: 162px; font-weight: bold; text-decoration: underline;">
      This Month
    </div> 
    -->

    <div style="display: inline-block; width: 191px; max-width: 191px; font-weight: bold; text-decoration: underline;">
      Contact Interval
    </div> 

    <div style="display: inline-block; width: 252px; max-width: 252px; font-weight: bold; text-decoration: underline;"> 
      Dynamic Reminders
    </div>
    
    <div style="display: inline-block; width: 150px; max-width: 150px; font-weight: bold; text-decoration: underline;"> 
      Notes
    </div>
  
    <div style="display: inline-block; width: 162px; max-width: 162px; font-weight: bold; text-decoration: underline;">
      Social Monitoring
    </div> 
  </div>

  <% if !@contacts.empty? %>
  
  <% @contacts.each do |contact| %>
    <p style="margin-bottom: 42px;"> 
      <%= form_for :contact, url: update_contact_url(id: contact.id),
          method: (:patch), remote: true, authenticity_token: true do |f| %>

        <div style="display: inline-block; width: 240px; max-width: 240px; font-size: 15px; padding-left: 60px;"> 
          <strong> <%= contact.name %> </strong> 
        </div>

        <!--
        <div style="display: inline-block; width: 168px; max-widths: 168px;">
          <%= f.check_box :this_month, checked: contact.this_month, style: "margin-left: 33px;",
              onchange: "click_submit_btn(this); return false;", class: "this_month_check_box" %>
          <%= f.submit "this month.", style: "display: none;" %>
        </div>
        -->

        <div style="display: inline-block; width: 191px; max-width: 191px;"> 
          Every
          <%= f.number_field :interval, value: contact.interval, style: "width: 30px;",
              onchange: "click_submit_btn(this); return false;", class: "interval_field" %> 
          months
          <%= f.submit "set", style: "display: none;" %>
        </div>

        <div style="display: inline-block; width: 252px; max-width: 252px;">
          <%= link_to 'set dynamic reminders', new_reminder_path(content: contact.name),
              id: "set_reminder_btn" %>
        </div>
  
        <div style="display: inline-block; width: 150px; max-width: 150px;">
          <%= link_to 'your notes', "#", id: "manage_contact_btn",
              onclick: "display_comment_section(#{contact.id}); return false",
                style: "padding: 5px 16px;" %>
        </div>

        <div style="display: inline-block; width: 145px; max-width: 145px;">
          <%= f.text_field :email, value: contact.email, style: "width: 155px;",
              onkeyup: "click_submit_btn(this); return false;", placeholder: "contact's email" %> 
          <%= f.submit "set", style: "display: none;" %>
        </div>

      <% end %>
    </p>

    <!-- notes sections -->
    <div id="<%= "comment_container_" + contact.id.to_s %>" class="note_taking_container">

      <div data-collapse="medium" data-animation="default" data-duration="400" class="navbar w-nav">
        <a href="/" class="brand w-nav-brand">
          <div class="logo-design" style="font-size: 17px;"> MYN - <%= @user.name %> </div>
        </a>
        <nav role="navigation" class="nav-menu w-nav-menu">
          <%= link_to 'Go Back', user_account_path(current_user), id: "watch_explainer_btn" %>
          <%= link_to 'Log Out', logout_path, method: :delete, id: "logout_btn" %>
        </nav>
        <div class="w-nav-button">
          <div class="w-icon-nav-menu"></div>
        </div>
      </div>
      <h3> Note about <%= contact.name %> </h3>
      <%= form_for :profile, :url => create_or_update_profile_url(contact_id: contact.id) do |form| %>
        <% if contact.profile %>
          <%= form.text_area :comment, value: contact.profile.comment, class: "add_note_field" %>
        <% else %>
          <%= form.text_area :comment, placeholder: "your note...", class: "add_note_field" %>
        <% end %> <br>
        <%= form.submit "Save Note", class: "submit-button-2 w-button" %>
      <% end %>
      
      <br>

      <%= link_to 'Delete many Contact', delete_contact_path(id: contact.id), method: :delete, data: { confirm: 'Do you want to delete this contact?' },
                id: "logout_btn" %> <br> <br>
    </div>
  <% end %>
  <% else %>
    <!-- when there are no contacts yet -->
    <h3 id="empty_contacts_msg"> First - Let Oleg explain: <br> <br>
    <%= link_to 'WATCH TWO MINUTE EXPLAINER', "https://www.youtube.com/watch?v=Z9-01xCqYaI&feature=youtu.be",
            target: "_blank", id: "watch_explainer_btn", style: "padding: 15px 34px" %> </h3>
  <% end %>

</div> 
