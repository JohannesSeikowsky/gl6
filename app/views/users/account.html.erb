<h1> MindYourNetwork: <%= @user.name %> </h1>

<% if notice %>
  <p> <%= notice %> </p>
<% end %>

<%= link_to 'Log Out', logout_path, method: :delete %> <br> <br>

<p>
	<strong> A recurring reminder </strong> will be sent each Sunday to suggest contacts with whom you should follow up this month.
	<br> <br>
	<strong> Specific reminders </strong> are email reminders that you yourself can easily set here to help yourself follow through.
</p> <br>

<!-- add a contact 
<%= form_for :contact, url: create_contact_url do |f| %>
  <%= f.text_field :name, placeholder: "Add one Contact" %>
  <%= f.submit "done" %>
<% end %> <br>
-->

<!-- add several contacts -->
<%= form_for :contact, url: create_many_contacts_url do |f| %>
  <%= f.text_field :names, placeholder: "Add many Contacts" %>
  <%= f.submit "done" %>
<% end %> <br> <br>


<!-- all contacts of user -->
<% @contacts.each do |contact| %>
  <!-- form for each contact -->
  <%= form_for :contact, url: update_contact_url(id: contact.id), 
          method: (:patch), remote: true do |f| %> 
    <%= contact.name %> <br>
    <%= f.check_box :this_month, checked: contact.this_month, onchange: "click_submit(this); return false;" %> 
    this month <br>
    <%= f.number_field :interval, value: contact.interval, 
            style: "width: 25px;", onchange: "click_submit(this); return false;" %> 
    month intervals <br>
    <%= link_to 'set a reminder', new_reminder_path(content: contact.name) %> <br>
    <%= link_to 'comment', "#" %> <br>
    <%= f.submit "submit" %> <br>
  <% end %> <br> <br>
<% end %>



          <!-- This Month -->
        <div style="display: inline-block; width: 168px; max-widths: 168px;">
          <%= f.check_box :this_month, checked: contact.this_month, style: "margin-left: 33px;",
              onchange: "click_submit(this); return false;" %>
          <%= f.submit "this month.", style: "display: none;" %>
        </div>

          <!-- Be in touch every -->
          <div style="display: inline-block; width: 215px; max-width: 215px;"> 
          Every
          <%= f.number_field :interval, value: contact.interval, style: "width: 25px;",
              onchange: "click_submit(this); return false;" %> 
          months
            <%= f.submit "set", style: "margin-left: 8px; display: none;" %>
        </div>



<script type="text/javascript">

  function click_submit_btn(this_element){
    submit_btn = this_element.parentNode.lastElementChild;
    submit_btn.click();
  }

</script>
