<div style="min-width: 1040px;">
<div data-collapse="medium" data-animation="default" data-duration="400"
    class="navbar w-nav" style="position: relative;">
  <a href="/" class="brand w-nav-brand">
      <div class="logo-design" style="font-size: 17px;"> MYN - <%= @user.name if @user %> </div>
  </a>
  <nav role="navigation" class="nav-menu w-nav-menu">  
    <div style="float: right;">

    </div>
  <div class="w-nav-button">
    <div class="w-icon-nav-menu"></div>
  </div>
</div>
</div>


<div class="add_contacts_container">
  <h3> Welcome <%= @user.first_name if @user %>! </h3>
  <p style="text-align: center; font-size: 24px; line-height: 1.38; margin-bottom; 40px; margin-top: 0px;"> 
  
    Who are 3-5 people - business or personal - <br>
    you would like to stay in contact with? <br> 
  </p>

    <%= form_for :contact, url: create_contacts_onboarding_url do |f| %>
      <%= f.text_area :names, placeholder: "Elon Musk, Ayn Rand, Noam Chomsky ... (please separate by comma)", id: "onboarding_contacts_field" %> <br>
      <%= f.submit "Done", class: "add-button w-button" %> <br> <br>
      <%= link_to 'skip for now', quick_intro_path, 
              style: "text-decoration: underline; color: grey;" %>
    <% end %>

    <% if notice %>
      <br> <br>
      <p style="text-align: center; font-size: 20px; line-height: 1.28;"> 
         <%= notice %>
      </p>
   <% end %>
</div>